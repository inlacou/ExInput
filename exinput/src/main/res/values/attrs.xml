<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="BaseInput">
        <attr name="required" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="TextInput">
        <attr name="maxLength" format="integer"/>
        <attr name="minLength" format="integer"/>
    </declare-styleable>
    <declare-styleable name="DateTimeInput">
        <attr name="mode24h" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="PasswordInput">
        <attr name="showHideButton" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="NumberInput">
        <attr name="maxDigits" format="integer"/>
        <attr name="markThousands" format="boolean"/>
        <attr name="thousandSeparator" format="string|reference"/>
        <attr name="decimalSeparator" format="string|reference"/>
    </declare-styleable>
    <declare-styleable name="DoubleInput">
        <attr name="maxIntegers" format="integer"/>
        <attr name="maxDecimals" format="integer"/>
    </declare-styleable>
    <declare-styleable name="MaterialSpinner">
        <attr name="android:enabled" />
        <attr name="android:focusable" />
        <attr name="android:focusableInTouchMode" />
        <attr name="android:prompt" />
        <attr name="android:src" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
        <attr name="android:gravity" />
        <attr name="srcCompat" />
        <attr name="spinnerMode" format="enum">
            <enum name="dialog" value="0" />
            <enum name="dropdown" value="1" />
            <enum name="bottomsheet" value="2" />
        </attr>
    </declare-styleable>
</resources>