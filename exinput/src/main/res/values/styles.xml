<resources>

	<style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/colorAccent</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/exinput_red_text</item>
	</style>

	<style name="exinput_inputDisabled">
		<!-- Inputted text color at all times -->
		<item name="android:textColor">@color/exinput_transparent</item>
		<item name="colorControlNormal">@color/exinput_transparent</item>
		<item name="colorControlActivated">@color/exinput_transparent</item>
		<!--<item name="colorControlHighlight">@color/basic_cyan</item>-->
	</style>

	<style name="exinput_input">
		<!-- Inputted text color at all times -->
		<item name="android:textColor">@color/exinput_basic_black</item>
		<item name="colorControlNormal">@color/exinput_basic_black</item>
		<item name="colorControlActivated">@color/exinput_basic_black</item>
		<item name="android:drawablePadding">@dimen/general_all</item>
		<!--<item name="colorControlHighlight">@color/basic_cyan</item>-->
	</style>

	<style name="editText" parent="exinput_input">
		<!-- Inputted text color at all times -->
		<item name="android:textColor">@color/exinput_basic_black</item>
		<item name="android:paddingTop">@dimen/general_all</item>
		<item name="android:paddingBottom">@dimen/general_all</item>
		<item name="android:textSize">17sp</item>
		<item name="android:inputType">text</item>
	</style>

	<style name="exinput_textInputLayout">
		<!-- Hint color and label color in FALSE state -->
		<item name="android:textColorHint">@color/exinput_unfocused_hint</item>
		<item name="android:textSize">20sp</item>
		<item name="hintTextAppearance">@style/exinput_textInputLayout.hint</item>
		<!-- Label color in TRUE state and bar color FALSE and TRUE State -->
		<item name="colorAccent">@color/exinput_focused_hint</item>
		<item name="colorControlNormal">@color/exinput_focused_hint</item>
		<item name="colorControlActivated">@color/exinput_focused_hint</item>
		on old -> focused hint color is always colorPrimary wtf
		on new -> unfocused hint color seems always grey wtf
		on old -> search one has red underline and position marker wtf
	</style>

	<style name="exinput_textInputLayout.hint" parent="TextAppearance.AppCompat.Small">
		<!-- Hint color when focused -->
		<item name="android:textColor">@color/exinput_focused_hint</item>
	</style>

